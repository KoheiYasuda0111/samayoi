<!DOCTYPE html>
<html>
  <head>
    <title>Samayoi</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <header>
     <div class="header-logo">
      <%= link_to("Samayoi","/") %>
    </div>
    <ul class="header-menus">
    <% if @current_user %>
    <li>
    <%= link_to(@current_user.name, "/users/#{@current_user.id}") %>
    </li>
    <li>
      <%= link_to("新規登録", "/signup") %>
    <li>
    <li>
      <%= link_to("ログイン", "/login") %>
    </li>
    </ul>
   </header>

   <% if flash[:notice] %>
     <div class="flash">
       <%= flash[:notice] %>
     </div>
   <% end %>

    <%= yield %>
  </body>
</html>
